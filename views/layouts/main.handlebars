<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Clowing Around Entertainment</title>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>

    <header>
      <div class='header-container'>
        <div class='header-left'>
          <img src='/images/clown.png' id='clown' />
          <h1 id='header-text'>CLOWNING AROUND Inc.</h1>
        </div>
        <div class='header-right' id='buttonContainer'>
          <a href='/profile'>
            <button id='profileButton'>Profile</button>
          </a>
          {{#if loggedIn}}
            <button id='logoutButton'>Logout</button>
          {{else}}
            <button id='loginButton' onclick='openModal()'>Login</button>
          {{/if}}
          <button
            id='registerButton'
            onclick='openRegisterModal()'
          >Register</button>
          {{#if loggedIn}}
            <button
              id='postJobButton'
              style='display: none'
              onclick='openPostJobModal()'
            >Post a New Job</button>
          {{/if}}
        </div>
      </div>
    </header>

    <!-- modal HTML here -->
    <div id='loginModal' class='modal'>
      <div class='modal-content'>
        <span class='close' onclick='closeModal()'>&times;</span>
        <h2>Login</h2>
        <form id='loginForm'>
          <label for='email'>Email:</label>
          <input type='text' id='email-login' name='email-login' required />
          <label for='password'>Password:</label>
          <input
            type='password'
            id='password-login'
            name='password-login'
            required
          />
          <button type='submit' class='login-button'>Submit</button>
          <button
            type='button'
            id='cancelButton'
            class='login-button'
            onclick='closeModal()'
          >Cancel</button>
        </form>
      </div>
    </div>

    <!-- register modal HTML here -->
    <div id='registerModal' class='modal'>
      <div class='modal-content'>
        <span class='close' onclick='closeRegisterModal()'>&times;</span>
        <h2>Register</h2>
        <form id='registerForm'>
          <label for='regUsername'>Username:</label>
          <input type='text' id='regUsername' name='regUsername' required />

          <label for='regPassword'>Password:</label>
          <input type='password' id='regPassword' name='regPassword' required />

          <label for='companyName'>Company Name:</label>
          <input type='text' id='companyName' name='companyName' required />

          <label for='postcode'>Postcode:</label>
          <input type='text' id='postcode' name='postcode' required />

          <label for='email'>Email:</label>
          <input type='email' id='email' name='email' required />
          <div class='button-container'>
            <button type='submit' class='login-button'>Submit</button>
            <button
              type='button'
              class='login-button'
              onclick='closeRegisterModal()'
            >Cancel</button>
          </div>
        </form>
      </div>
    </div>

    <main class='container container-fluid mt-5'>{{{body}}}</main>
    <script src='./js/logout.js'></script>
    <script src='./js/login.js'></script>
    <script src='./js/script.js'></script>
  </body>

</html>