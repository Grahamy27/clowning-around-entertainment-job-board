<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clowing Around Entertainment</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>

    <header>
      <div class="header-container">
        <div class="header-left">
          <img src="/images/clown.png" id="clown" />
          <h1 id="header-text">CLOWNING AROUND Inc.</h1>
        </div>
        <div class="header-right" id="buttonContainer">
          {{#if loggedIn}}
            <button id="postJobButton" class="button" onclick="openPostJobModal()">Post a New
              Job</button>
            <a href="/profile">
              <button id="profileButton" class="button">Profile</button>
            </a>
            <button id="logoutButton" class="button">Logout</button>
          {{else}}
            <button id="loginButton" class="button" onclick="openModal()">Login</button>
            <button
              id="registerButton" class="button" onclick="openRegisterModal()">Register</button>
          {{/if}}
        </div>
      </div>
    </header>

    <!-- Login modal HTML here -->
    <div id="loginModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Login</h2>
        <form id="loginForm">
          <label for="email">Email:</label>
          <input type="text" id="email-login" name="email-login" required />
          <label for="password">Password:</label>
          <input
            type="password"
            id="password-login"
            name="password-login"
            required
          />
          <button type="submit" class="button">Submit</button>
          <button type="button" id="cancelButton" class="button" onclick="closeModal()">Cancel</button>
        </form>
      </div>
    </div>

    <!-- register modal HTML here -->
    <div id="registerModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeRegisterModal()">&times;</span>
        <h2>Register</h2>
        <form id="registerForm">
          <label for="regUsername">Username:</label>
          <input type="text" id="regUsername" name="regUsername" required />

          <label for="regPassword">Password:</label>
          <input type="password" id="regPassword" name="regPassword" required />

          <label for="companyName">Company Name:</label>
          <input type="text" id="companyName" name="companyName" required />

          <label for="postcode">Postcode:</label>
          <input type="text" id="postcode" name="postcode" required />

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
          <div class="button-container">
            <button type="submit" class="button">Submit</button>
            <button type="button" class="button" onclick="closeRegisterModal()">Cancel</button>
          </div>
        </form>
      </div>
    </div>

    <!-- PostJob modal HTML here -->
    <div id="jobPostModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeJobPostModal()">×</span>
        <h2>Create New Job Post:</h2>
        <form id="jobPostForm">
          <label for="jobTitle">Job Title:</label>
          <input
            type="text"
            id="jobTitle"
            name="jobTitle"
            placeholder="Trapeze Artist, etc."
            required=""
          />
          <label for="jobDescription">Job Description:</label>
          <input
            class="job-description"
            type="text"
            id="jobDescription"
            name="Description"
            placeholder="Enter details of role here"
            required=""
          />
          <label for="jobSalary">Salary:</label>
          <input
            type="text"
            id="jobSalary"
            name="jobSalary"
            pattern="^\£\d{1,3}(,\d{3})*(\.\d+)?$"
            placeholder="Enter Amount"
            required=""
          />
          <div class="button-container">
            <button type="submit" class="button">Submit</button>
            <button type="button" class="button" onclick="closeJobPostModal()">Cancel</button>
          </div>
        </form>
      </div>
    </div>

    <!-- PostJob modal HTML here -->
    <div id="jobPostModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeJobPostModal()">×</span>
        <h2>Create New Job Post:</h2>
        <form id="jobPostForm">
          <label for="jobTitle">Job Title:</label>
          <input
            type="text"
            id="jobTitle"
            name="jobTitle"
            placeholder="Trapeze Artist, etc."
            required=""
          />
          <label for="jobDescription">Job Description:</label>
          <input
            class="job-description"
            type="text"
            id="jobDescription"
            name="Description"
            placeholder="Enter details of role here"
            required=""
          />
          <label for="jobSalary">Salary:</label>
          <input
            type="text"
            id="jobSalary"
            name="jobSalary"
            pattern="^\£\d{1,3}(,\d{3})*(\.\d+)?$"
            placeholder="Enter Amount"
            required=""
          />
          <div class="button-container">
            <button type="submit" class="button">Submit</button>
            <button type="button" class="button"onclick="closeJobPostModal()">Cancel</button>
          </div>
        </form>
      </div>
    </div>

    {{! profile modal HTML here}}
    <div id='profileModal' class='modal'>
  <div class='modal-content'>
    <span class='close' onclick='closeProfileModal()'>&times;</span>
    <form id='profileForm'>
      <label for='updatedCompanyName'>Company Name:</label>
      <input type='text' id='updatedCompanyName' name='companyName' required />

      <label for='updatedPostcode'>Postcode:</label>
      <input type='text' id='updatedPostcode' name='postcode' required />

      <label for='updatedTownName'>Town:</label>
      <input type='text' id='updatedTownName' name='townName' required />

      <label for='updatedRegionName'>Region:</label>
      <input type='text' id='updatedRegionName' name='regionName' required />

      <label for='updatedEmail'>Email:</label>
      <input type='email' id='updatedEmail' name='email' required />

      <div class='button-container'>
        <button type='submit' class='button'>Submit</button>
        <button type='button' class='button' onclick='closeProfileModal()'>Cancel</button>
      </div>
    </form>
  </div>
</div>

    <main class="container container-fluid mt-5">{{{body}}}</main>
    <script src="./js/logout.js"></script>
    <script src="./js/login.js"></script>
    <script src="./js/script.js"></script>
  </body>

</html>