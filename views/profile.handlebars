<div class="profileContainer">
  <section class="profileContainerLeft">
    {{#each posts as |post|}}
      <div class="profileJobListing">
        <h3><a
            id="post-title"
            href="/posts/{{post.id}}"
          >{{post.jobTitle}}</a></h3>
      </div>
    {{/each}}
  </section>

  <section class="profileContainerRight">
    <div class="profileUserListing">
      <h3>Company Name:
        <span class="companyNameDisplay">{{companyName}}</span></h3>
      <h3>Postcode: <span class="postcodeDisplay">{{postcode}}</span></h3>
      <h3>Town: <span class="townNameDisplay">{{townName}}</span></h3>
      <h3>Region: <span class="regionNameDisplay">{{regionName}}</span></h3>
      <h3>Email: <span class="emailDisplay">{{email}}</span></h3>
    </div>

    
      <div class="profileBottomRight">
        <button
          id="openProfileModal"
          class="button"
          onclick="openProfileModal()"
        >Edit Profile</button>
      </div>
    
  </section>
</div>